<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="nwaah.trk.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">



        <TextView
            android:id="@+id/currentTrackName"
            android:textSize="38sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@+id/button4"
            android:layout_toLeftOf="@+id/button4"/>

        <Button
            android:text="Wybierz"
            android:onClick="chooseTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_alignTop="@+id/currentTrackName"
            android:layout_alignRight="@+id/currentTrackDetails"
            android:layout_alignEnd="@+id/currentTrackDetails"/>

    <TextView
        android:id="@+id/currentTrackDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="testWrite"
        android:onClick="testWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/button"/>

    <Button
        android:text="clear"
        android:onClick="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <Button
        android:visibility="gone"
        android:text="testReadall"
        android:onClick="testRead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_above="@+id/text"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="checkDB"
        android:onClick="DBcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:textOff="Włącz"
        android:textOn="Wyłącz"
        android:onClick="setService"
        android:enabled="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:visibility="gone"
        android:text="nothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:onClick="showSettings"
        android:text="@string/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button3"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokaż na mapie"
        android:id="@+id/button5"
        android:onClick="showMap"
        android:layout_below="@+id/currentTrackDetails"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
