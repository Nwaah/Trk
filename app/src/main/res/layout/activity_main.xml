<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="nwaah.trk.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/currentTrackName"
                android:textSize="38sp"
                android:layout_width="wrap_content"
                android:layout_weight = "80"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"/>
            <Button
                android:text="Wybierz"
                android:layout_gravity="right"
                android:layout_weight="4"
                android:onClick="chooseTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4" />

        </LinearLayout>




    <TextView
        android:id="@+id/currentTrackDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

        <TextView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <Button
        android:text="testWrite"
        android:onClick="testWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/button"/>

    <Button
        android:text="clear"
        android:onClick="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <Button
        android:visibility="gone"
        android:text="testReadall"
        android:onClick="testRead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        />

    <Button
        android:text="checkDB"
        android:onClick="DBcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

        <TextView
        android:visibility="gone"
        android:text="nothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokaż na mapie"
        android:id="@+id/button5"
        android:onClick="showMap"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:onClick="showSettings"
            android:text="@string/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button3"
            />
    </LinearLayout>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:layout_gravity="center_horizontal"
        android:textOff="Włącz"
        android:textOn="Wyłącz"
        android:onClick="setService"
        android:enabled="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
